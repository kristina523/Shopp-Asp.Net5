@model Shopp.Models.Product

@{
    ViewBag.Title = "Удаление продукта";
}

<link rel="stylesheet" href="~/css/deleteProduct.css" />

<div class="delete-confirmation">
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Names)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Descriptions)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" name="id" asp-action="DeleteProducts" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>

        </form>
        @if (ViewBag.ErrorMessage != null)
        {
            @ViewBag.ErrorMessage
            ;
        }
    </div>
    </div>
</div>