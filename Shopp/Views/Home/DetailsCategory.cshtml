@model Shopp.Models.Category
@{
    ViewBag.Title = Model.Names;
}

<link rel="stylesheet" href="~/css/categoryDetails.css" />

<div class="category-details">
    <h2>Категория: @Model.Names</h2>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.CategoriesId</dd>

        <dt>Название</dt>
        <dd>@Model.Names</dd>
    </dl>
    <div class="actions">
        <a asp-action="EditCategory" asp-route-id="@Model.CategoriesId" class="edit">Изменить</a>
        <a asp-action="Index" class="back">Вернуться к списку</a>
    </div>
</div>