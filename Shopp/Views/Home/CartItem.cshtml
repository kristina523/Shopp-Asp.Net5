@model List<Shopp.Models.CartItem>

<h2>Корзина</h2>
<link rel="stylesheet" href="~/css/cart.css" />

@if (Model.Count == 0)
{
    <p>Ваша корзина пуста.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Название товара</th>
                <th>Количество</th>
                <th>Цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Names</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td> 
                </tr>
            }
        </tbody>
    </table>
}
