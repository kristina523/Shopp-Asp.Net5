@model Shopp.Models.Product
@{
    ViewBag.Title = Model.Names;
}
<link rel="stylesheet" href="~/css/productDetails.css" />

<div class="product-details">
    <h2>Продукт @Model.Names</h2>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.ProductId</dd>

        <dt>Название</dt>
        <dd>@Model.Names</dd>

        <dt>Цена</dt>
        <dd>@Model.Price</dd>

        <dt>Описание</dt>
        <dd>@Model.Descriptions</dd>

    </dl>
</div>