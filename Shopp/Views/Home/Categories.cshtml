@model IEnumerable<Shopp.Models.Category>
@using System.Linq

@{
    ViewBag.Title = "Страница категорий";
}

<link rel="stylesheet" href="~/css/categories.css" />

<h1>Список категорий</h1>

<a asp-action="CreateCategory" asp-controller="Home" class="btn btn-success">Добавить категорию</a>

<table class="table table-striped mt-3 categories-table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="2" class="text-center">Категория не найдена.</td>
            </tr>
        }
        else
        {
            foreach (var category in Model)
            {
                <tr>
                    <td>@category.Names</td>
                    <td>
                        <a asp-action="DetailsCategory" asp-route-id="@category.CategoriesId">Детали</a> |
                        <a asp-action="EditCategory" asp-route-id="@category.CategoriesId">Изменить</a> |
                        <a asp-action="DeleteCategory" asp-route-id="@category.CategoriesId" onclick="return confirm('Вы уверены, что хотите удалить эту категорию?');">Удалить</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>