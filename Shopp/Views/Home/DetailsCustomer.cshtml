@model Shopp.Models.Customer
@{
    ViewBag.Title = Model.FirstName;
}
<head>
<link rel="stylesheet" href="~/css/customerDetails.css" />
</head>
<div class="customer-details">
    <h2>Клиент: @Model.FirstName @Model.LastName</h2>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.CustomerId</dd>

        <dt>Имя</dt>
        <dd>@Model.FirstName</dd>

        <dt>Фамилия</dt>
        <dd>@Model.LastName</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>Телефон</dt>
        <dd>@Model.Phone</dd>

        <dt>Адрес</dt>
        <dd>@Model.Address</dd>
    </dl>
    <div class="actions">
        <a asp-action="EditCustomer" asp-route-id="@Model.CustomerId" class="edit">Изменить</a>
    </div>
</div>