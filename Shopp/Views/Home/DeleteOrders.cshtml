@model Shopp.Models.Order
@{
    ViewBag.Title = "Удаление заказа";
}

<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор заказа</dt>
        <dd>
            @Html.DisplayFor(model => model.OrderId)
        </dd>
        <dt>Клиент</dt>
        <dd>
            @(Model.Customer?.FirstName + " " + Model.Customer?.LastName ?? "Не указан")
        </dd>
        <dt>Общая стоимость</dt>
        <dd>
            @($"{Model.TotalPrice:C}")
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteOrder" method="post">
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>