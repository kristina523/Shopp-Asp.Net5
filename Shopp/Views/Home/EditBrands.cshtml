@model Shopp.Models.Brand
@{
    ViewData["Title"] = "Изменить бренд"; 
}

<link rel="stylesheet" href="~/css/editBrand.css" />

<h1>Изменить бренд</h1>
<hr />
<div class="edit-brand-form">
    <form asp-action="EditBrands" asp-route-id="@Model.BrandsId" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="BrandsId" />
        <div class="form-group">
            <label asp-for="Names" class="control-label">Название</label>
            <input asp-for="Names" class="form-control" />
            <span asp-validation-for="Names" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label">Страна</label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="back-to-list">
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}