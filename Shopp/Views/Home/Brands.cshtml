@model IEnumerable<Shopp.Models.Brand>
@using System.Linq

@{
    ViewBag.Title = "Страница брендов";
}

<link rel="stylesheet" href="~/css/brands.css" /> 

<h1>Список брендов</h1>

<a asp-action="CreateBrands" asp-controller="Home" class="btn btn-success">Добавить бренд</a>

<table class="table table-striped mt-3 brands-table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Страна</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">Бренд не найден.</td>
            </tr>
        }
        else
        {
            foreach (var brand in Model)
            {
                <tr>
                    <td>@brand.Names</td>
                    <td>@brand.Country</td>
                    <td>
                        <a asp-action="DetailsBrands" asp-route-id="@brand.BrandsId">Детали</a> |
                        <a asp-action="EditBrands" asp-route-id="@brand.BrandsId">Изменить</a> |
                        <a asp-action="DeleteBrands" name="id" asp-route-id="@brand.BrandsId"  >Удалить</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>