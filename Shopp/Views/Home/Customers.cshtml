@model IEnumerable<Shopp.Models.Customer>
@using System.Linq

@{
    ViewBag.Title = "Страница покупателей";
}

<link rel="stylesheet" href="~/css/customers.css" />

<h1>Список клиентов</h1>

<a asp-action="CreateCustomer" asp-controller="Home" class="btn btn-success">Добавить клиента</a>

<table class="table table-striped mt-3 customers-table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">Клиент не найден.</td>
            </tr>
        }
        else
        {
            foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>
                        <a asp-action="DetailsCustomer" asp-route-id="@customer.CustomerId">Детали</a> |
                        <a asp-action="EditCustomer" asp-route-id="@customer.CustomerId">Изменить</a> |
                        <a asp-action="DeleteCustomer" asp-route-id="@customer.CustomerId" onclick="return confirm('Вы уверены, что хотите удалить этого клиента?');">Удалить</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>