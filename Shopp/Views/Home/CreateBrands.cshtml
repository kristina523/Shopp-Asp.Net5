@model Shopp.Models.Brand

@{
    ViewBag.Title = "Добавление бренда";
}

<link rel="stylesheet" href="~/css/createBrand.css" />

<div class="create-brands-form">
    <form asp-action="CreateBrands" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Names" class="control-label">Название</label>
            <input type="text" asp-for="Names" class="form-control" />
            <span asp-validation-for="Names" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country" class="control-label">Страна</label>
            <input type="text" asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </form>
</div>